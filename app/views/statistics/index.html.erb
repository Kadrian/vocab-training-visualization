<% content_for :header do %>
  <%= javascript_include_tag 'app/statistics', 'data-turbolinks-track' => true %>  
<% end %>

<%= javascript_tag do %>
	window.data = <%= raw @data %>
<% end %>

<div class="row">
	<div class="col-sm-12 text-left">
		<div class="graph" id="graph1">
			<h1>Last training by <%= @name %></h1>	
			<div class="description">
				<p class="totalWords"></p>
				<p class="totalTime"></p>
				<p class="date"></p>
			</div>		
			<h4>Sorted by</h4>
			<div id="last-training-toggle" class="btn-group" data-toggle="buttons">
				<label class="btn btn-default active">
					<input type="radio" name="options" id="opt1" checked> Number of trials
				</label>
				<label class="btn btn-default">
					<input type="radio" name="options" id="opt2"> Time
				</label>
			</div>
			<div id="graph1-chart" style="width:100%; height:200px; margin: 0 auto;"></div>

			<h4>Time to solve per character</h4>
			<div id="graph2-chart" style="width:100%; height:200px; margin: 0 auto;"></div>

			<h1>Word proficiency</h1>	
			<div class="wordlistpicker-container text-left">
				<select class="wordlistpicker span12" data-width="30%">
					<% for list in @wordlists %>
						<option><%= list.title + " - " + list.author %></option>
					<% end %>
				</select>
			</div>
			<div id="graph3-chart" style="width:100%; height:300px; margin: 0 auto;"></div>

		</div>
	</div>
</div>

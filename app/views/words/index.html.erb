<h1>Listing words</h1>

<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Jap</th>
      <th>Eng</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.jap %></td>
        <td><%= word.eng %></td>
        <td><%= link_to 'Show', word, :class => "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Edit', edit_word_path(word), :class => "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Destroy', word, :class => "btn btn-default btn-xs", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Word', new_word_path, :class => "btn btn-default" %>

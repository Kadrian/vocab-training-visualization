<h1>Listing trainings</h1>

<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Word</th>
      <th>Training number</th>
      <th>Trials</th>
      <th>Time</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trainings.each do |training| %>
      <tr>
        <td><%= training.word_id %></td>
        <td><%= training.training_number %></td>
        <td><%= training.trials %></td>
        <td><%= training.time %></td>
        <td><%= training.name %></td>
        <td><%= link_to 'Show', training, :class => "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Edit', edit_training_path(training), :class => "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Destroy', training, :class => "btn btn-default btn-xs", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Training', new_training_path, :class => "btn btn-default" %>
